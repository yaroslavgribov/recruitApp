.form
  display flex
  flex-direction column
  justify-content center
  max-width 55rem
  width 100%
  margin 5rem auto
  padding spacing-large spacing-large
  background white

  box-shadow 0px 2px 5px 3px rgba(0, 0, 0, 0.2)

.form-header
  text-align center
  font-size font-size-heading
  margin spacing-large auto spacing-large*2

.form-footer
  display flex
  flex-direction row
  justify-content center

  margin spacing-large auto spacing-large

.form-field
  flex 1 1 100%
  margin 0 spacing-large spacing-large

.form-control
  width 100%
  appearance none
  background white
  padding spacing
  border solid 1px color-text