.header
  width 100%
  padding spacing-large*1.5 0
  margin-bottom spacing-large*2

  background-color color-primary
  box-shadow 0px 0px 3px 2px rgba(0, 0, 0, .2)

  .main-nav
    display flex
    flex-direction row
    justify-content space-between
    align-items center

  .main-logo
    font-size font-size-heading
    color white

  .main-nav-actions
    display flex
    flex-direction row

  .user-image
    width 30px
    border-radius 100%
    margin-right spacing

  .user-name
    margin-right spacing